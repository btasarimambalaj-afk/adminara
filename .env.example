# App Configuration
PORT=3000
PUBLIC_URL=http://localhost:3000
CHANNEL_NAME=haydayArama
APP_VERSION=1.0.0
NODE_ENV=development

# Security
SESSION_SECRET=your-super-secret-key-change-this
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
MAX_CONNECTIONS=50

# Performance
PING_INTERVAL=240000
ROOM_TIMEOUT_MS=60000
CONNECTION_TIMEOUT=30000
OTP_EXPIRY=300000
DEBUG_STATE=false

# Telegram Bot
TELEGRAM_BOT_TOKEN=your-bot-token-here
TELEGRAM_ADMIN_CHAT_ID=your-chat-id-here
TELEGRAM_ADMIN_HANDLE=@admin
TELEGRAM_ADMIN_FIRST=Admin
TELEGRAM_ADMIN_LANG=tr

# OTP Rate Limiting
ENABLE_OTP_RATE_LIMIT=true
OTP_REQUEST_LIMIT=5
OTP_REQUEST_WINDOW=900000
OTP_FAIL_LIMIT=5
OTP_LOCKOUT_DURATION=900000

# Metrics
METRICS_AUTH=Basic YWRtaW46c2VjcmV0

# Redis (Optional - for scaling)
# REDIS_URL=redis://localhost:6379
# REDIS_NAMESPACE=support
# STATE_TTL_SECS=3600

# Queue System (Optional - requires Redis)
# ENABLE_QUEUE=false

# CSRF Protection (Optional)
