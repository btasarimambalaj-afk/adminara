# Production Environment Variables for Render.com
# Copy this to .env for local development

# Node Environment
NODE_ENV=production
PORT=3000

# Secrets (Generate with: openssl rand -base64 32)
SESSION_SECRET=<generate-random-32-chars>
COOKIE_SECRET=<generate-random-32-chars>
JWT_SECRET=<generate-random-32-chars>

# Public URL (set to your Render URL)
PUBLIC_URL=https://adminara.onrender.com

# CORS Origins
ALLOWED_ORIGINS=https://adminara.onrender.com
ALLOWED_METRICS_ORIGINS=https://adminara.onrender.com

# Optional: Telegram Bot for OTP
TELEGRAM_BOT_TOKEN=<your-bot-token>
TELEGRAM_ADMIN_CHAT_ID=<your-chat-id>

# Optional: TURN Server for WebRTC
TURN_SERVER_URL=turn:turn.example.com:3478
TURN_MODE=static
TURN_USERNAME=<username>
TURN_CREDENTIAL=<password>
TURN_SECRET=<generate-random-32-chars>
TURN_TTL=300

# Optional: Redis for state persistence
REDIS_URL=redis://username:password@host:port
REDIS_NAMESPACE=support
STATE_TTL_SECS=3600

# Optional: Monitoring
SENTRY_DSN=<your-sentry-dsn>
METRICS_AUTH=Basic YWRtaW46c2VjcmV0

# Feature Flags
ENABLE_QUEUE=true
ENABLE_CSRF=true
ENABLE_PII_MASKING=true
ENABLE_TRACING=false

# Performance
MAX_CONNECTIONS=50
RATE_LIMIT_MAX=100
ROOM_TIMEOUT_MS=60000
PING_INTERVAL=240000

# Security
JWT_ACCESS_TTL=900
JWT_REFRESH_TTL=604800
MFA_ISSUER=AdminAra

# Logging
DEBUG_STATE=false

# Retention
RETENTION_DAYS=30

# Adaptive Quality
ADAPTIVE_BITRATE=true
MIN_BITRATE=300000
MAX_BITRATE=1500000
BATTERY_THRESHOLD=0.2

# Encryption
ENCRYPTION_KEY=<generate-random-32-chars>
