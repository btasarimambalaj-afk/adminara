# App Configuration
PORT=3000
PUBLIC_URL=http://localhost:3000
CHANNEL_NAME=haydayArama
APP_VERSION=1.0.0
NODE_ENV=development

# Security
SESSION_SECRET=your-super-secret-key-change-this
COOKIE_SECRET=your-cookie-secret-change-this
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
MAX_CONNECTIONS=50

# Performance
PING_INTERVAL=240000
ROOM_TIMEOUT_MS=60000
CONNECTION_TIMEOUT=30000
OTP_EXPIRY=300000
DEBUG_STATE=false

# Telegram Bot
TELEGRAM_BOT_TOKEN=your-bot-token-here
TELEGRAM_ADMIN_CHAT_ID=your-chat-id-here
TELEGRAM_ADMIN_HANDLE=@admin
TELEGRAM_ADMIN_FIRST=Admin
TELEGRAM_ADMIN_LANG=tr

# OTP Rate Limiting
ENABLE_OTP_RATE_LIMIT=true
OTP_REQUEST_LIMIT=5
OTP_REQUEST_WINDOW=900000
OTP_FAIL_LIMIT=5
OTP_LOCKOUT_DURATION=900000

# Metrics
METRICS_AUTH=Basic YWRtaW46c2VjcmV0

# Redis (Optional - for scaling)
# REDIS_URL=redis://localhost:6379
# REDIS_NAMESPACE=support
# STATE_TTL_SECS=3600

# Queue System (Optional - requires Redis)
# ENABLE_QUEUE=false

# CSRF Protection (Optional)
# ENABLE_CSRF=false

# CORS Configuration
# ALLOWED_ORIGINS=https://adminara.onrender.com,http://localhost:3000

# Metrics Origin Guard (Production Recommended)
# Restricts /metrics/* endpoints to specific origins for CSRF protection
# ALLOWED_METRICS_ORIGINS=https://adminara.onrender.com,http://localhost:3000

# Monitoring (Optional)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# TURN Server (Optional - for NAT traversal)
# TURN_SERVER_URL=turn:YOUR_PUBLIC_IP:3478
# TURN_MODE=rest
# TURN_USERNAME=adminara
# TURN_CREDENTIAL=STRONGPASS
# TURN_SECRET=YOUR_LONG_RANDOM_SECRET_MIN_32_CHARS
