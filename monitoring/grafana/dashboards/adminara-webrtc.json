{
  "dashboard": {
    "title": "AdminAra WebRTC",
    "tags": ["adminara", "webrtc"],
    "timezone": "browser",
    "refresh": "5s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Active WebRTC Connections",
        "type": "graph",
        "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "webrtc_connections_active",
            "legendFormat": "Active"
          }
        ]
      },
      {
        "id": 2,
        "title": "WebRTC Connection State",
        "type": "piechart",
        "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "webrtc_connection_state",
            "legendFormat": "{{state}}"
          }
        ]
      },
      {
        "id": 3,
        "title": "ICE Connection State",
        "type": "piechart",
        "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "webrtc_ice_connection_state",
            "legendFormat": "{{state}}"
          }
        ]
      },
      {
        "id": 4,
        "title": "Connection Quality",
        "type": "graph",
        "gridPos": {"x": 12, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "webrtc_connection_quality",
            "legendFormat": "{{quality}}"
          }
        ]
      },
      {
        "id": 5,
        "title": "ICE Restart Count",
        "type": "graph",
        "gridPos": {"x": 0, "y": 16, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(webrtc_ice_restart_total[5m])",
            "legendFormat": "Restarts/sec"
          }
        ]
      },
      {
        "id": 6,
        "title": "Connection Duration",
        "type": "graph",
        "gridPos": {"x": 12, "y": 16, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "webrtc_connection_duration_seconds",
            "legendFormat": "Duration"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s"
          }
        }
      }
    ]
  }
}
