{
  "name": "hayday-webrtc-support",
  "version": "1.3.5",
  "description": "HayDay WebRTC destek uygulamasÄ± - Production Ready",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "jest tests/e2e",
    "test:e2e:playwright": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:coverage": "jest --coverage --coverageReporters=lcov",
    "test:quick": "jest tests/integration/metrics-guard.test.js tests/e2e",
    "docker:build": "docker build -t hayday-support .",
    "docker:run": "docker-compose up",
    "docker:stop": "docker-compose down",
    "deploy:check": "npm test && npm run test:coverage"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "jest": "^29.7.0",
    "socket.io-client": "^4.5.0",
    "supertest": "^6.3.3"
  },
  "dependencies": {
    "@sentry/node": "^10.19.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.18.0",
    "express-rate-limit": "^6.7.0",
    "helmet": "^6.0.0",
    "joi": "^17.11.0",
    "node-telegram-bot-api": "^0.66.0",
    "prom-client": "^14.2.0",
    "socket.io": "^4.5.0",
    "winston": "^3.8.0"
  },
  "keywords": [
    "webrtc",
    "video-call",
    "support",
    "hayday",
    "production-ready"
  ],
  "author": "HayDay Destek",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/tests/jest.setup.js"
    ],
    "testEnvironment": "node",
    "testTimeout": 10000,
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  }
}
