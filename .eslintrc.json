{
  "env": {
    "node": true,
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "extends": ["eslint:recommended", "prettier"],
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "globals": {
    "io": "readonly",
    "WebRTCManager": "readonly",
    "Helpers": "readonly",
    "QueueUI": "readonly",
    "PerfectNegotiation": "readonly",
    "ConnectionMonitor": "readonly",
    "AdaptiveQuality": "readonly",
    "i18n": "readonly",
    "__ENV": "readonly",
    "__VU": "readonly"
  },
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-console": "off",
    "no-undef": "warn",
    "prefer-const": "warn",
    "no-var": "warn"
  },
  "ignorePatterns": ["node_modules/", "coverage/", "playwright-report/", "logs/"]
}
